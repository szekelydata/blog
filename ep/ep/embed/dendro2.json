{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 500,
  "height": 550,
  "padding": 25,

  "signals": [
    {
      "name": "Label", "value": "party2",
      "bind": {"input": "radio",
      "options": ["party", "group","party2", "group2", "none"]
      }
    },
    {
      "name": "Layout", "value": "cluster",
      "bind": {"input": "radio", "options": ["tidy","cluster"]}
    },
    {
      "name": "Year", "value": 2018,
      "bind": {
        "input": "range",
         "min": 2004, "max": 2019, "step": 1
      }
    },
    {
      "name": "Links", "value": "diagonal",
      "bind": {
        "input": "select",
        "options": ["line", "curve", "diagonal", "orthogonal"]
      }
    },
    {
      "name": "Cluster", "value": "name",
      "bind": {
        "input": "select",
        "options": ["name", "party", "group"]
      }
    },
    {
      "name": "Country", "value": "Hungary",
      "bind": {
        "input": "select",
        "options": ["Romania", "Hungary", "Joint"]
      }
    }
  ],

  "data": [
    {
      "name": "tree",
"url":"https://szekelydata.csaladen.es/ep/ep/export/json/nodes.json",      
      "transform": [
        {"type":"filter",
          "expr": "datum.country==Country"
        },
        {"type":"filter",
          "expr": "datum.year==Year"
        },
        {"type":"filter",
          "expr": "datum.allegiance==Cluster"
        },
        {
          "type": "stratify",
          "key": "name",
          "parentKey": "parent"
        },
        {
          "type": "tree",
          "method":{"signal": "Layout"},
          "size": [{"signal": "height"}, {"signal": "width - 100"}],
          "as": ["y", "x", "depth", "children"]
        }
      ]
    },
    {
      "name": "links",
      "source": "tree",
      "transform": [
        { "type": "treelinks" },
        {
          "type": "linkpath",
          "orient": "horizontal",
          "shape": {"signal": "Links"}
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "color",
      "type": "linear",
      "range": {"scheme": "viridis"},
      "domain": {"data": "tree", "field": "depth"},
      "zero": false
    }
  ],

  "marks": [
    {
      "type": "path",
      "from": {"data": "links"},
      "encode": {
        "update": {
          "path": {"field": "path"},
          "stroke": {"value": "#ccc"}
        }
      }
    },
    {
      "type": "symbol",
      "from": {"data": "tree"},
      "encode": {
        "enter": {
          "size": {"value": 100},
          "stroke": {"value": "#000"}
        },
        "update": {
          "x": {"field": "x"},
          "y": {"field": "y"},
          "fill": {"scale": "color", "field": "depth"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "tree"},
      "encode": {
        "enter": {
          "text": {"field": "name"},
          "fontSize": {"value": 14},
          "baseline": {"value": "middle"}
        },
        "update": {
          "x": {"field": "x"},
          "y": {"field": "y"},
          "dx": {"signal": "datum.children ? -7 : 7"},
          "align": {"signal": "datum.children ? 'right' : 'left'"},
          "opacity": {"signal": "datum.parent ? 0 : 1"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "tree"},
      "encode": {
        "enter": {
          "text": {"field": "name"},
          "fontSize": {"signal": "datum.country=='Joint' ? 10 : 12"},
          "baseline": {"value": "middle"}
        },
        "update": {
          "x": {"field": "x"},
          "y": {"field": "y"},
          "dx": {"signal": "datum.children ? -7 : 7"},
          "align": {"signal": "datum.children ? 'right' : 'left'"},
          "opacity": {"signal": "datum.children ? 0 : 1"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "tree"},
      "encode": {
        "enter": {
          "fontSize": {"signal": "datum.country=='Joint' ? 10 : 12"},
          "baseline": {"value": "middle"}
        },
        "update": {
          "text": {"field": {"signal":"Label"}},
          "x": {"field": "x"},
          "y": {"field": "y"},
          "dx": {"signal": "-7"},
          "fill": {"field": {"signal":"Label=='party' ? 'partycolor' : Label=='party2' ? 'partycolor' : 'groupcolor'"}},
          "align": {"signal": "datum.children ? 'left' : 'right'"},
          "opacity": {"signal": "datum.children ? 0 : 1"}
        }
      }
    }
  ]
}
