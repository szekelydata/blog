    {
      "name": "hover",
      "value": null,
      "on": [{
          "events": "@circle:mouseover",
          "update": "datum"
        },
        {
          "events": "@circle:mouseout",
          "update": "null"
        }
      ]
    }, 
    {
      "name": "title",
      "value": "EP allegiance votes",
      "update": "hover ? hover.name + ' | ' + hover.party + ' | ' + hover.group : 'EP allegiance votes'"
    }
  ],

  "data": [
    {
      "name": "tree",
"url":"https://szekelydata.csaladen.es/ep/ep/export/json/topics.json",    
      "transform": [
        {"type":"filter",
          "expr": "datum.country==Country"
        },
        {"type":"filter",
          "expr": "datum.year==Year"
        },
        {"type":"filter",
          "expr": "datum.allegiance==Cluster"
        },
        {
          "type": "filter",
          "expr": "datum.area==Area"
        },
        {
          "type": "filter",
          "expr": "datum.topic==Topic"
        },
        {
          "type": "stratify",
          "key": "name",
          "parentKey": "parent"
        },
        {
          "type": "tree",
          "method":{"signal": "Layout"},
          "size": [{"signal": "height"}, {"signal": "width - 150"}],
          "as": ["y", "x", "depth", "children"]
        }
      ]
    },
    {
      "name": "links",
      "source": "tree",
      "transform": [
        { "type": "treelinks" },
        {
          "type": "linkpath",
          "orient": "horizontal",
          "shape": {"signal": "Links"}
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "color",
      "type": "linear",
      "range": {"scheme": "viridis"},
      "domain": {"data": "tree", "field": "depth"},
      "zero": false
    }
  ],

  "marks": [
    {
      "type": "path",
      "from": {"data": "links"},
      "encode": {
        "update": {
          "path": {"field": "path"},
          "stroke": {"value": "#ccc"}
        }
      }
    },
    {
      "type": "symbol",
      "name":"circle",
      "from": {"data": "tree"},
      "encode": {
        "enter": {
          "size": {"value": 100},
          "stroke": {"value": "#000"}
        },
        "update": {
          "x": {"field": "x"},
          "y": {"field": "y"},
          "fill": {"scale": "color", "field": "depth"},
          "cursor": {
            "value": "pointer"
          }
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "tree"},
      "encode": {
        "enter": {
          "text": {"field": "name"},
          "fontSize": {"value": 14},
          "baseline": {"value": "middle"}
        },
        "update": {
          "x": {"field": "x"},
          "y": {"field": "y"},
          "dx": {"signal": "datum.children ? 7 : 7"},
          "align": {"signal": "datum.children ? 'left' : 'left'"},
          "opacity": {"signal": "datum.parent ? 0 : 1"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "tree"},
      "encode": {
        "enter": {
          "text": {"field": "name"},
          "fontSize": {"signal": "datum.country=='Joint' ? 10 : 12"},
          "baseline": {"value": "middle"}
        },
        "update": {
          "x": {"field": "x"},
          "y": {"field": "y"},
          "dx": {"signal": "datum.children ? -7 : 7"},
          "align": {"signal": "datum.children ? 'right' : 'left'"},
          "opacity": {"signal": "datum.children ? 0 : 1"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "tree"},
      "encode": {
        "enter": {
          "fontSize": {"signal": "datum.country=='Joint' ? 10 : 12"},
          "baseline": {"value": "middle"}
        },
        "update": {
          "text": {"field": {"signal":"Label"}},
          "x": {"field": "x"},
          "y": {"field": "y"},
          "dx": {"signal": "-7"},
          "fill": {"field": {"signal":"Label=='party' ? 'partycolor' : Label=='party2' ? 'partycolor' : 'groupcolor'"}},
          "align": {"signal": "datum.children ? 'left' : 'right'"},
          "opacity": {"signal": "datum.children ? 0 : 1"}
        }
      }
    },
    {
      "type": "text",
      "interactive": false,
      "encode": {
        "enter": {
          "x": {
            "value": 700
          },
          "y": {
            "value": 0
          },
          "fill": {
            "value": "black"
          },
          "fontSize": {
            "value": 14
          },
          "align": {
            "value": "right"
          }
        },
        "update": {
          "text": {
            "signal": "title"
          }
        }
      }
    }
